<div class="w-full h-40 mb-5 pl-4 text-3xl font-bold text-white tracking-wider flex font-mono" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @list.img_url %>')">
  <span class="inline-block align-middle self-center">
    Enjoy the 
    <span class="text-indigo-600 text-5xl ">
      <%= @list.name %>
    </span>
  </span>
</div>
  <div class="grid grid-cols-3 gap-4 mx-4">
    <% @list.bookmarks.each do |bookmark|%>
    <div class="w-full bg-white shadow-lg border-gray-100 max-h-80	 border sm:rounded-3xl px-2 py-3 flex flex-row-reverse space-x-4 space-x-reverse items-center">
      <div class="h-full w-auto">
          <img class="rounded-3xl shadow-lg object-cover h-full" src="<%= bookmark.movie.poster_url %>" alt="">
      </div>
        <div class="flex flex-col w-1/2 space-y-4">
          <div class="flex justify-between items-end">
            <h2 class="text-xl font-bold truncate"><%= bookmark.movie.title %></h2>
            <div class="text-xs bg-yellow-400 font-bold rounded-xl p-2"><%= bookmark.movie.rating %></div>
          </div>
          <div>
            <div class="text-md font-bold text-gray-800">Overview</div>
          </div>
            <p class="text-xs text-gray-400 h-28 overflow-ellipsis overflow-hidden"><%= bookmark.movie.overview %></p>
          <div class="flex text-sm font-bold text-a items-end grid justify-items-start">
            "<%= bookmark.comment %>"
            <%= link_to 'delete', bookmark_path(bookmark), method: :delete, class:"text-sm text-gray-500 px-2 py-1 rounded-full bg-indigo-100 no-underline hover:bg-indigo-200 hover:no-underline mt-3"%>
          </div>
      </div>
    </div>
    <% end %>
  </div>
  
<div class="w-full h-40 flex justify-center mt-20">
  <%= link_to list_path, method: :delete do %>
    <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">
      Destory List
    </button>
  <% end %>
  <%= link_to new_list_bookmark_path(@list) do %>
    <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">
      Add bookmark
    </button>
  <% end %>
  <%= link_to lists_path do %>
    <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">
      Back to home
    </button>
  <% end %>
</div>






