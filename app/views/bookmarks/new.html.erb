
<div class="w-full grid">
  <div class="w-1/3 justify-self-center">
    <h1 class="text-2xl font-bold text-green-500 mb-5"> new bookmark in this list</h1>
    <%= simple_form_for([@list, @bookmark]) do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie, collection: Movie.all, input_html: { class: 'select2' } %>
      
      <%= f.button :submit %>
  <% end %>
  </div>
</div>

<div class="w-full h-40 flex justify-center mt-20">
  <%= link_to list_path(@list) do %>
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow self-center">
        Back to list
      </button>
    <% end %>
</div>

